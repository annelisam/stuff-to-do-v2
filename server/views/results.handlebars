                {{!-- Card example --}}
                    {{#each events}}
                        <div class="card" data-id="{{ id }}">
                            <img class="card-img-top" src="{{ urlPhoto }}" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">{{ name }}</h5>
                                <p class="card-text">{{ description }}</p>
                                <p class="card-text">{{ date }}</p>            
                                <a href="#" class="btn btn-primary">Upvote {{ upVotes }}</a>
                            </div>
                        </div>
                    {{/each}}
                
                
                </div>
            </div>
        </div>
    </div>
</div>

